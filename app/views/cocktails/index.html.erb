
<div class="container-cards" style="width: 100%">
  <div class="banner">
    <div class='index_title d-flex' style="justify-content: center">
      <div>
        <span style="font-size: 4.5rem"><h1>Cocktails</h1></span>
        <span><%= link_to "Make a Faboulos Cocktail", new_cocktail_path, class:"btn btn-primary" %></span>
      </div>
      <div class="banner-gif"><%= cl_image_tag "https://i.pinimg.com/originals/87/88/12/878812e91bb59437a1b027799bcfc05d.gif", height: 300, width: 280, radius: "max", format: "gif", crop: :fill  %></div>
    </div>
  </div>

  <ul class="index-card">
    <% @cocktails.each do |cocktail| %>
      <div class="card" style="">
        <div class="card-cocktail-img" style=""><%= cl_image_tag cocktail.photo.key, height: 300, width: 280, radius: "max", format: "png", crop: :fill %></div>
        <h5 class="card-title" style="text-align: center; color: #E67E22"><%= cocktail.name %></h5>
        <div class="card-cocktail-name" style="text-align: center; padding-bottom: 5px"><%= link_to "See cocktail", cocktail_path(cocktail), class: "btn btn-warning"%></div>
      </div>
    <% end %>
  </ul>
</div>
<div class="index-background"></div>