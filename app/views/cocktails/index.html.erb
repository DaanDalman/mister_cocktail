
<div class="container-cards" style="width: 100%">
  <div class="banner">
    <div class='index_title' style="display: grid">
      <span style="font-size: 4.5rem">Cocktails</span>
      <span><%= link_to "Create Cocktail", new_cocktail_path, class:"btn btn-primary" %></span>
    </div>
  </div>

  <ul class="index-card">
    <% @cocktails.each do |cocktail| %>
      <div class="card" style="">
        <div class="card-cocktail-img" style=""><%= cl_image_tag cocktail.photo.key, height: 300, width: 280, crop: :fill %></div>
        <h5 class="card-title" style="text-align: center; color: #E67E22"><%= cocktail.name %></h5>
        <div class="card-cocktail-name" style="text-align: center; padding-bottom: 5px"><%= link_to "See cocktail", cocktail_path(cocktail), class: "btn btn-warning"%></div>
      </div>
    <% end %>
  </ul>
</div>