<div class='index_title'>
  <h1>Cocktails</h1>
  <%= link_to "Create", new_cocktail_path, class:"btn btn-primary" %>
</div>
<ul class="index_card d-flex justify-content-between m-2">
  <% @cocktails.each do |cocktail| %>
    <div class="card" style="">
      <%= cl_image_tag cocktail.photo.key, height: 300, width: 400, crop: :fill %>
      <h5 class="card-title text-align-center"><%= cocktail.name %></h5>
      <%= link_to "See cocktail", cocktail_path(cocktail), class: "btn btn-primary br-2x"  %>
    </div>
  <% end %>
</div>

  
</ul>
